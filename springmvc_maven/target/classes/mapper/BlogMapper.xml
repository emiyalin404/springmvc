    <select id="queryBlog" parameterType="Blog" resultType="Blog">
        SELECT * FROM `springmvc`.`blog`
        <where>
            <choose>
                <when test="title !=null">
                    title = #{title}
                </when>
                <when test="author != null">
                    AND author like CONCAT('%',#{author},'%') ;
                </when>
                <otherwise>
                    AND 1=1
                </otherwise>
            </choose>

        </where>
    </select>
